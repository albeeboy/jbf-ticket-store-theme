
{% comment %}https://www.emergeinteractive.com/insights/detail/the-essentials-of-favicons/{% endcomment %}
<link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">

{% comment %}generics{% endcomment %}
<link rel="icon" href="{{ 'favicon-32.png' | asset_url }}" sizes="32x32">
<link rel="icon" href="{{ 'favicon-57.png' | asset_url }}" sizes="57x57">
<link rel="icon" href="{{ 'favicon-76.png' | asset_url }}" sizes="76x76">
<link rel="icon" href="{{ 'favicon-96.png' | asset_url }}" sizes="96x96">
<link rel="icon" href="{{ 'favicon-128.png' | asset_url }}" sizes="128x128">
<link rel="icon" href="{{ 'favicon-192.png' | asset_url }}" sizes="192x192">
<link rel="icon" href="{{ 'favicon-228.png' | asset_url }}" sizes="228x228">

{% comment %}Android{% endcomment %}
<link rel="shortcut icon" sizes="196x196" href="{{ 'favicon-196.png' | asset_url }}">

{% comment %}iOS{% endcomment %}
<link rel="apple-touch-icon" href="{{ 'apple-touch-icon-120.png' | asset_url }}" sizes="120x120">
<link rel="apple-touch-icon" href="{{ 'apple-touch-icon-152.png' | asset_url }}" sizes="152x152">
<link rel="apple-touch-icon" href="{{ 'apple-touch-icon-180.png' | asset_url }}" sizes="180x180">

{% comment %}Windows 8 IE 10{% endcomment %}
<meta name="msapplication-TileColor" content="#FFFFFF">
<meta name="msapplication-TileImage" content="{{ 'favicon-144.png' | asset_url }}">

{% comment %}Windows 8.1 + IE11 and above{% endcomment %}
<meta name="msapplication-TileColor" content="#ffffff"/>
<meta name="msapplication-square70x70logo" content="{{ 'favicon-128.png' | asset_url }}"/>
<meta name="msapplication-square150x150logo" content="{{ 'favicon-270.png' | asset_url }}"/>
<meta name="msapplication-TileImage" content="{{ 'favicon-270.png' | asset_url }}"/>
<meta name="msapplication-config" content="none"/>
